<launch>

    <arg name="project" default="lviorf"/>
    
    <!-- Lidar odometry param -->
    <rosparam file="$(find lviorf)/config/pinhole/M2DGR_params_lidar.yaml" command="load" />
    
    <!-- VINS config -->
    <param name="vins_config_file" type="string" value="$(find lviorf)/config/pinhole/M2DGR_params_camera.yaml" />

    <!--- LOAM -->
    <include file="$(find lviorf)/launch/include/module_loam.launch" />

    <!-- Image conversion -->
    <node pkg="image_transport" type="republish" name="$(arg project)_republish" args="compressed in:=/camera/color/image_raw raw out:=/camera/color/image_raw" output="screen" respawn="true"/>

    <!--- Robot State TF -->
    <!-- <include file="$(find lviorf)/launch/include/module_robot_state_publisher.launch" /> -->

    <!--- Run Navsat -->
    <!-- <include file="$(find lviorf)/launch/include/module_navsat.launch" /> -->

    <!--- Run Rviz-->
    <include file="$(find lviorf)/launch/include/module_rviz.launch" />

</launch>
